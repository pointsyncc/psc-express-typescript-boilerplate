{
  "compilerOptions": {
    "module": "esnext", // Specify module code generation
    "target": "esnext", // Specify ECMAScript target version
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ],
    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Disallow implicit `any` types
    "importHelpers": true, // Allow importing helper functions from tslib once per project, instead of including them per-file
    "pretty": true, // Stylize errors and messages using color and context (experimental)
    "strictNullChecks": true, // Enable strict null checks
    "strictFunctionTypes": true, // Enable strict checking of function types
    "strictPropertyInitialization": true, // Enable strict checking of property initialization
    "noUncheckedIndexedAccess": true,
    "noImplicitThis": true, // Disallow `this` keyword with an implicit `any` type
    "noUnusedLocals": false, // Report errors on unused locals
    "noUnusedParameters": false, // Report errors on unused parameters
    "noImplicitReturns": true, // Report error when not all code paths in function return a value
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src", // Base directory to resolve non-absolute module names
    "alwaysStrict": true, // Parse in strict mode and emit "use strict" for each source file
    "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES Modules
    "resolveJsonModule": true, // Allow importing JSON files as modules
    "declaration": true, // Generate corresponding .d.ts files
    "outDir": "dist", // Output directory for compiled files
    "sourceMap": true, // Generate source maps for compiled files
    "moduleResolution": "node", // Specify module resolution strategy
  },
  "include": ["src/**/*"], // List of files to include in compilation
  "exclude": ["node_modules", "**/*.spec.ts"] // List of files to exclude from compilation
}
